<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/alert_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_alert"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/reminder_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Body"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@id/alert_icon"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/reminder_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28th may 2019"
            android:textColor="@color/darkerGrey"
            android:layout_below="@+id/reminder_body"
            android:layout_toEndOf="@id/alert_icon"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>